{
  "name": "site",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "test": "npm run services:up && npm run migration:up && concurrently --n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\" ",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate -m infra/migration create",
    "migration:up": "node-pg-migrate -m infra/migration --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "author": "",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "next": "^15.1.2",
    "node-pg-migrate": "^7.8.0",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2"
  }
}
